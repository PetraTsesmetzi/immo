<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}

        {{ encore_entry_link_tags('app') }}

    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>


<body>
{% block body %}

    <nav class="navbar navbar-dark bg-dark">
        <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNavAltMarkup">
            <div class="navbar-nav">

                <a class="nav-link" href="#">Unser Unternehmen</a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="nav-link" href="#">Kaufen</a>
                {% endif %}
                <a class="nav-link" href="#">Verkaufen</a>
                <a class="nav-link" href="#">Projekte</a>
                {% if not app.user %}
                    <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                {% else %}
                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                {% endif %}

            </div>

            <div class="d-flex">
                <div  class="p-2">{% if app.user %} Welcome on our Page <span class="text-info">{{ app.user.firstname }}</span>!{%endif %}</div>
            </div>

        </div>
    </nav>

{% endblock %}
</body>
</html>
